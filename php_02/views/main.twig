{% extends "__layout.twig" %}

{% block content %}

<div class="row d-flex">
    {% for object in characters %}
        <div class="col">
            <div class="border p-2 d-flex flex-column">
                <div class="img-thumbnail mb-2" style="width:100%;height:250px;">
                    <img src="{{object.image}}" style="width:100%;height:100%;object-fit:cover;">
                </div>
                <div class="d-flex flex-column">
                    <a class="btn btn-primary mb-2" href="/characters/{{object.id}}">{{object.title}}</a>
                    <div class="d-flex justify-content-center">
                        <a class="me-4" href="/characters/{{object.id}}?show=image">Image</a>
                        <a href="/characters/{{object.id}}?show=info">Description</a>
                    </div>
                </div>
           </div>  
        </div>
    {% endfor %}
</div>

{% endblock %}