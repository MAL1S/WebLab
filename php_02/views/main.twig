{% extends "__layout.twig" %}

{% block content %}

<div class="row d-flex">
    {% for object in characters %}
        <div class="col mb-4 d-flex align-items-stretch">
            <div class="border p-2 flex-grow-1 d-flex flex-column justify-content-between position-relative">
                <div class="position-absolute" style="right: 4px; top: 4px">
                    <form action="/characters/{{object.id}}/edit" method="get">
                        <input type="hidden" name="id" value="{{ object.id }}">
                        <button type="submit" class="btn btn-warning">
                            <i class="fas fa-edit"></i>
                        </button>
                    </form>
                    <form action="/characters/delete" method="post" style="margin-top: 4px;">
                        <input type="hidden" name="id" value="{{ object.id }}">
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-times"></i>
                        </button>
                    </form>
                </div>
                <div class="img-thumbnail mb-2" style="width:100%;height:250px;">
                    <img src="{{object.image}}" style="width:100%;height:100%;object-fit:cover;">
                </div>
                <div class="d-flex flex-column">
                    <a class="btn btn-primary mb-2" href="/characters/{{object.id}}">{{object.title}}</a>
                    <div class="d-flex justify-content-center">
                        <a class="me-4" href="/characters/{{object.id}}?show=image">Image</a>
                        <a href="/characters/{{object.id}}?show=info">Description</a>
                    </div>
                </div>
           </div>  
        </div>
    {% endfor %}
</div>

{% endblock %}