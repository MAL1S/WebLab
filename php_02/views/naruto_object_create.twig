{% extends "__layout.twig" %}

{% block content %}
    <h1>Adding new Naruto character</h1>
    <hr>
    
    {% if message %}
    <div class="alert alert-info">
        {{ message }}
        <a href="/characters/{{id}}">Open new character</a>
    </div>
    {% endif %}

    <form method="post" enctype="multipart/form-data" class="row g-3">
        <div class="col-4">
            <label class="form-label">Name</label>
            <input type="text" class="form-control" name="title">
        </div>
        <div class="col-4">
            <label class="form-label">Short description</label>
            <input type="text" class="form-control" name="description">
        </div>
        <div class="col-4">
            <label class="form-label">Type</label>
            <select class="form-control" name="type">
                <option value="konoha">Konoha</option>
                <option value="akatsuki">Akatsuki</option>
            </select>
        </div>
        <div class="mb-3">
            <label for="formFile" class="form-label">Upload image file</label>
            <input class="form-control" type="file" name="image">
          </div>
        <div class="col-12">
            <textarea name="info" placeholder="Full description..." class="form-control" rows="5"></textarea>
        </div>
        <div class="col-12 text-end">
            <button type="submit" class="btn btn-primary">Add</button>
        </div>
    </form>

{% endblock %}