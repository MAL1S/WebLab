{% extends "__layout.twig" %}

{% block content %}

<div class="row d-flex">
    {% for object in character_types %}
        <div class="col">
            <div class="border p-2 d-flex flex-column">
                <div class="img-thumbnail mb-2" style="width:100%;height:250px;">
                    <img src="{{object.image}}" style="width:100%;height:100%;object-fit:cover;">
                </div>
                <div class="d-flex flex-column">
                    <a class="btn btn-primary mb-2" href="/type/?type={{object.name}}">{{object.name}}</a>
                </div>
           </div>  
        </div>
    {% endfor %}
</div>

{% endblock %}